{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "module": "NodeNext",
    "sourceMap": true,
    "declaration": true,
    "noEmit": true,
    "lib": ["es2022"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
